{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,

    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "jsx": "react-jsx",

    "types": ["node"],

    "skipLibCheck": true
  },

  "include": [
    "src",
    "vite.config.ts"
  ]
}
